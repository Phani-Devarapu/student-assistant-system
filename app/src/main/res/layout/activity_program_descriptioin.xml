<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgramDescriptioinActivity">


    <ImageView
        android:id="@+id/produDescriMainImage"
        android:layout_width="406dp"
        android:layout_height="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="46dp"
        android:background="#e07b39"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/produDescriMainImage"
        app:layout_constraintVertical_bias="0.014">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:text="@string/wishlist_program_description"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"

            android:textSize="22sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/fav_Icon_imageButton"
            android:layout_width="114dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:textAlignment="center"
            app:srcCompat="@drawable/ic_favorite_24px" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>