<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgramDescriptioinActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <ImageView
        android:id="@+id/produDescriMainImage"
        android:layout_width="406dp"
        android:layout_height="163dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />


    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="96dp"
        android:orientation="vertical"
        android:id="@+id/layout_program_college"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/produDescriMainImage"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/program_des_ProgramName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="28sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/program_des_CollegeName"
                android:layout_width="193dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="gravity"
                android:textAppearance="@style/TextAppearance.AppCompat.Display2"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/program_des_level"
                android:layout_width="31dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Display3"
                android:textSize="24sp" />


        </LinearLayout>


    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lay_department"
                app:layout_constraintTop_toBottomOf="@id/layout_program_college"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/pro_des_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textAlignment="viewStart"
                    android:text="@string/pro_des_Department_key"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    tools:text="asasas">
               </TextView>

                <TextView
                    android:id="@+id/pro_des_departmentName"
                    android:layout_width="match_parent"
                    android:layout_margin="16dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    tools:text="Name">

                </TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lay_faculty"
                app:layout_constraintTop_toBottomOf="@id/lay_department"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/pro_des_faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAlignment="viewStart"
                android:text="@string/pro_des_Faculty_key"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textSize="24sp"
                android:textStyle="italic"
                tools:text="asasas">
            </TextView>

            <TextView
                android:id="@+id/pro_des_facultyName"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                tools:text="Name">

            </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lay_degree"
                app:layout_constraintTop_toBottomOf="@id/lay_faculty"
                app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/pro_des_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:textAlignment="viewStart"
                android:text="@string/pro_des_Degree_key"
                android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                android:textSize="24sp"
                android:textStyle="italic"
                tools:text="asasas">
            </TextView>

            <TextView
                android:id="@+id/pro_des_degreeName"
                android:layout_width="match_parent"
                android:layout_margin="16dp"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                tools:text="Name">

            </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lay_degree"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/pro_des_duration"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/pro_des_Duration_key"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    tools:text="asasas"></TextView>

                <TextView
                    android:id="@+id/pro_des_durationTime"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    tools:text="Name">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/startTerm_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/lay_duration"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/pro_des_startTerm"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="@string/pro_des_satrtTerm_key"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display4"
                    android:textSize="24sp"
                    android:textStyle="italic"
                    tools:text="asasas"></TextView>

                <TextView
                    android:id="@+id/pro_des_startTermDuration"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    android:textAlignment="center"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                    android:textSize="20sp"
                    tools:text="Name">

                </TextView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <Button
        android:id="@+id/add2WishListButton"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_wishlist_button_red_bg"
        android:text="@string/wishlist_program_description"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/removeFromWishListButton"
        android:layout_width="180dp"
        android:layout_height="43dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_wishlist_button_red_bg"
        android:text="@string/remove_wishlist_program_description"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>